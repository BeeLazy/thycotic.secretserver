{
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoSurround": "languageDefined",
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useCorrectCasing": true,

    // newer versions of VS Code now have ability to format modifications
    //  instead of whole file
    "editor.formatOnSave": false,

    // selecting variables to include the '$':
    "[powershell]": {
        "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?"
    },
    "powershell.codeFormatting.addWhitespaceAroundPipe": true,
    // GitHub PR extension
    "githubIssues.queries": [
        {
            "label": "Assigned Issues",
            "query": "default"
        },
        {
            "label": "Secrets Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} label:secrets"
        },
        {
            "label": "Folders Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} label:folders"
        },
        {
            "label": "Groups Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} label:groups"
        },
        {
            "label": "Roles Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} label:roles"
        },
        {
            "label": "Users Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} label:users"
        },
        {
            "label": "SecretTemplates Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} label:SecretTemplates"
        },
        {
            "label": "Bug Reports",
            "query": "author:${user} state:open repo:${owner}/${repository} label:bug"
        },
        {
            "label": "Module Reports",
            "query": "author:${user} state:open repo:${owner}/${repository} label:module"
        },
        {
            "label": "Feature Request",
            "query": "author:${user} state:open repo:${owner}/${repository} label:\"feature request\""
        },
        {
            "label": "Created Issues",
            "query": "state:open repo:${owner}/${repository} sort:created-desc"
        }
    ],
    "markdownlint.config": {
        "MD022": false,
        "MD047": false,
        "MD033": false,
        "MD024": false,
        "MD041": false
    }
}